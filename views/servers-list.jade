if (servers.length > 0)
  table.table.table-striped
    thead
      tr
        th Host
        th User
        th Path
        th Limit
        th Status
        th
    tbody
      each server in servers
        tr
          td= server.hostname
          td= server.username
          td= server.path
          td
            .input-append
              input.span1.server-limit(placeholder="Limit", value="#{server.limit}", type="text", data-server-id="#{server.id}")
              span.add-on KB
          td.server-status(data-server-id="#{server.id}")
          td
            button.btn.btn-primary.server-rescan(type="button", data-server-id="#{server.id}") Rescan
            button.btn.btn-danger.server-delete(type="button", data-server-id="#{server.id}") Delete
else
  p You did not add any servers yet.
